<!doctype html>
<html lang="en">
  <head>
    <link rel="preload" href="/data.json" as="fetch" crossorigin="anonymous">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{{title}}">
    <title>Comparinator</title>
    <style>
      {{'css/bonsai-base.css' | inlineCss | safe}}
      {{'css/nav.css' | inlineCss | safe}}
      {{'css/data.css' | inlineCss | safe}}
      {{'css/toggler.css' | inlineCss | safe}}
      {{'css/modal.css' | inlineCss | safe}}
    </style>
    <script src="/js/app.esm.js" type="module" defer="defer"></script>
    <script src="/js/toggler.esm.js" type="module" defer="defer"></script>
  </head>

  <body>
    {% include "header.njk" %}

    <main id="content">
      {{ layoutContent | safe }}
    </main>

    {% include "modal.njk" %}
    <script id="data-source" type="application/json">
      {{ prerenderData | dump | safe }}
    </script>
  </body>

</html>
